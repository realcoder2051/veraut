<div class="row mt-4" >
  <div class="col-lg-4 left-move"></div>
  <div class="col-lg-4 left-move">
    <label for="project_task_task_id">Process</label>
    <%= f.text_field :task,hide_label: true %>
    <div class="invalid-feedback">Please provide a time.</div>
    <div class="valid-feedback">Looks good!</div>
  </div>
</div>

<div class="actions col-lg-12 mt-3">
  <div class="row mb-5">
    <div class="col-lg-5 left-move"></div>
    <div class="left-move">
      <%= f.submit value: "Save", class: "btn btn-primary"%>
    </div>
    <div class="ml-2">
      <%= link_to 'Cancel', project_tasks_path, class: "btn btn-secondary " %>
    </div>
  </div>
</div>
