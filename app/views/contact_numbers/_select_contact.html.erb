<% if session[:task_id]%>
	<div class="row">
		<div class="col-lg-4 left-move"></div>
		<div class="col-lg-4 left-move">
			<%= select_tag "number_dropdown",options_from_collection_for_select(@numbers, "id", "number"),{:onChange => 'contact(this); return false;', prompt: "Select number", class: "selectItem"}  %>
			<div class="invalid-feedback">Please provide a time.</div>
			<div class="valid-feedback">Looks good!</div>
		</div>
	</div>
<% end %>
<div class="row">
	<div class="col-lg-4 left-move"></div>
	<div class="col-lg-4 left-move">
		<%= f.text_field :number %>
		<div class="invalid-feedback">Please provide a time.</div>
		<div class="valid-feedback">Looks good!</div>
	</div>
</div>

<div class="row">
	<div class="col-lg-4 left-move"></div>
	<div class="col-lg-4 left-move">
		<%= f.select :contact_type,options_for_select([ "Main", "Cell" ]),{ :include_blank => '-- Select One --' } %>
		<div class="invalid-feedback">Please provide a time.</div>
		<div class="valid-feedback">Looks good!</div>
	</div>
</div>
<div class="actions col-lg-12">
	<div class="row">
		<div class="col-lg-5 left-move"></div>
		<div class="left-move">
			<%= f.submit value: "Save", class: "btn btn-primary"%>
		</div>
		<div class="col-lg-1 right-move"></div>
		<div class="right-move">
			<%= link_to 'Cancel', generals_path, class: "btn btn-secondary " %>
		</div>
	</div>
</div>