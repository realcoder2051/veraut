<% if resource.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= params[:language] == "spanish" ? "1 error prohibió que se guardara a este usuario:" : I18n.t("errors.messages.not_saved",
                 count: resource.errors.count,
                 resource: resource.class.model_name.human.downcase) 
       %>
    </h2>
    <ul>
      <% resource.errors.full_messages.each do |message| %>
        <li>
          <%= params[:language] == "spanish" && message == "Email can't be blank" ? "El correo electrónico no puede estar en blanco": message %>
        </li>
      <% end %>
    </ul>
  </div>
<% end %>
