<div class="form-row" >
  <div class="col-lg-4 left-move"></div>
  <div class="col-lg-4 left-move">
    <%= f.text_area :description %>
    <div class="invalid-feedback">Please provide a time.</div>
    <div class="valid-feedback">Looks good!</div>
  </div>
</div>
<div class="row" >
  <div class="col-lg-4 left-move"></div>
  <div class="col-lg-4 left-move">
    <%= f.select :data_collection_step , options_for_select(["general","company", "principals", "family", "business", "contact", "plan", "5500", "employee"], @note[:data_collection_step]), { :include_blank => '-- Select One --' }  %>
    <div class="invalid-feedback">Please provide a time.</div>
    <div class="valid-feedback">Looks good!</div>
  </div>
</div>

<div class="actions col-lg-12">
  <div class="row">
    <div class="col-lg-5 left-move  my-2"></div>
    <div class="left-move my-2 ml-2 mr-2">
      <%= f.submit value: "Save", class: "btn btn-primary"%>
    </div>
    <div class="right-move my-2">
      <%= link_to 'Cancel', approvals_path, class: "btn btn-secondary " %>
    </div>
  </div>
</div>
