<div class="mt-1 float-left ">
	<h4 > Notes </h4>
</div>
<div class="mr-3 float-right btn-size">
	<%= link_to 'Add', new_note_path,id: 'add_note', class:"btn btn-primary px-6 mt-1" %>
</div>

<div class="table-responsive border-bottom" data-toggle="lists" data-lists-values='["js-lists-values-employee-name"]'>
	<table class="table mb-0 thead-border-top-0 mt-1">
		<thead>
			<tr class="table-info">
				<th>Note</th>
				<th>Date</th>
				<th>Created_by</th>
				<th colspan="1">Actions</th>
			</tr>
		</thead>
		<% count = 0 %>
		<tbody class="list" id="blah">
			<% @notes.each do |note| %>
			<% if (note.created_by == current_user.email && note.task_id == session[:task_id]) %>
			<% count += 1 %>
			<%= render 'notes/approval_note', note: note %>
			<% end %>
			<% end %>
			<% if count == 0 %>
			<tr>
				<td> no results found </td>
			</tr>
			<%end%>
		</tbody>
	</table>
</div>
<div class="pagination card-body float-right" >
	<%= will_paginate @notes %>
</div>