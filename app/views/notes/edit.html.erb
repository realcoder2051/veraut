<div class="employee-form-scroll">
  <div class="container-fluid page__heading-container">
    <div class="page__heading">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb mb-0">
          <li class="breadcrumb-item"><a href=<%=root_path%>><i class="material-icons icon-20pt">home</i></a></li>
          <li class="breadcrumb-item active" aria-current="page"><a href=<%=notes_path%>>Note</a></li>
        </ol>
      </nav>
      <h1 class="m-0">Edit Notes</h1>
    </div>
  </div>
  <div class="container-fluid page__container">
    <div class="card card-form">
      <div class="row no-gutters">
        <div class="col-lg-4 card-body">
          <p><strong class="headings-color">Question Requirements</strong></p>
          <p class="text-muted"><code>Question Type</code></p>
        </div>
        <div class="col-lg-12 card-form__body card-body">
          <%= bootstrap_form_with(model:@note, local:true) do |f| %>
          <% if @note.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@note.errors.count, "error") %> prohibited this lab value from being saved:</h2>
            <ul>
              <% @note.errors.full_messages.each do |message| %>
              <li><%= message %></li>
              <% end %>
            </ul>
          </div>
          <% end %>
          <%= render 'form', f: f %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>