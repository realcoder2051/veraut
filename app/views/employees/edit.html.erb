<div class = "employee_index_scroll"> 
  <div class="container-fluid page__heading-container">
    <div class="page__heading d-flex align-items-center">
      <div class="flex">
        <nav aria-label="breadcrumb">
          <ol class="breadcrumb mb-0">
            <li class="breadcrumb-item"><a href=<%='#'%>><i class="material-icons icon-20pt">home</i></a></li>
            <li class="breadcrumb-item active" aria-current="page"><a href=<%='#'%>>Employee</a></li>
          </ol>
        </nav>
        <h1 class="m-0">Edit Employee</h1>
      </div>
    </div>
  </div>
  <div class="container-fluid page__container"  > 
    <div class="card card-">
        <div class="row no-gutters">
        <div class="col-lg-12 card-form__body card-body">
          <%= bootstrap_form_with(model:@employee, local:true) do |f| %>
             <% if session[:error]%>
              <div class="company_flash_message">
                <div class="container flash-custom" >
                  <%= session[:error] %>
                  <% session[:error] = nil%>
                </div>
              </div>
              <div class="container"></div>
            <%end%>
            <%=render 'form', f: f %>
            <% end %>
        </div>
        </div>
    </div>
  </div>
</div>


