 <div class = "employee_index_scroll"> 
  <div class="container-fluid page__heading-container">
  <div class="page__heading d-flex align-items-center">
    <div class="flex">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb mb-0">
          <li class="breadcrumb-item"><a href=<%='#'%>><i class="material-icons icon-20pt">home</i></a></li>
          <li class="breadcrumb-item active" aria-current="page"><a href=<%='#'%>>Questions</a></li>
        </ol>
      </nav>
      <h1 class="m-0">Employees</h1>
    </div>
  </div>
  </div>

  <div class="container-fluid page__container">

    <div class="card card-form">
      <div class="row no-gutters">
        <div class="col-lg-12 card-form__body">
        <%= form_tag import_file_path, :id=> 'target', multipart: true do %>

          <div class="m-3 float-left  d-none" >
          <%= file_field_tag :file, class: 'form-control file_import '%>
          </div>
          <div class="ml-3 my-3 float-left">
          <%= link_to 'Import','', class:"btn btn-success import px-3 " %>
          </div>
          <div class="ml-2 my-3 float-left">
            <%= link_to 'Export',employees_path(format: "xlsx"), class:"btn btn-primary px-3" %>
          </div>
          <div class="mr-3 my-3 float-right">
            <%= link_to 'Save',save_employee_path, class: 'btn btn-primary px-3'%>
          </div>
          <div class="mr-2 my-3 float-right">
          <%= link_to 'Delete',bulk_delete_employees_path	 ,id: 'delete', class:"btn btn-danger px-3" %>
          </div>
        <% end %>

        </div>
        <div class="col-lg-12 card-form__body">
          <%= search_form_for @q, url: '#', class: "", method: "get" do |f| %>
            <div class="float-left px-3">
              <div class="search-form search-form--light ">
                <%= f.search_field :ssn_eq, value: @ssn, placeholder: "Search by ssn", title: "SSN" ,:class=>"form-control search" %>
                <button class="btn" type="button" role="button"><i class="material-icons">search</i></button>
              </div>
            </div>


            <div class="float-left">
              <input class="form-control btn btn-primary px-3" name="search_submit" type="submit" value="Search"></input>
            </div>
            <div class="mr-3 float-right btn-size">
              <%= link_to 'Add', new_employee_path,id: 'add_employee', class:"btn btn-primary px-6" %>
            </div>
          <% end %>

          <form action=<%= bulk_delete_employees_path%> method='get'>
            <%= render 'employee.table', employees: @employees  %>
              <div class="card-body float-left">
                <button type="submit" class="btn btn-danger">Bulk Delete</button>
              </div>
              <div class="pagination card-body float-right" >
              <%= will_paginate @employees %>
              </div>
          </form>


        </div>
      </div>
    </div>
  </div>
</div>

