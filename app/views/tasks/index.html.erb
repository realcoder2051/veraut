<div class="container-fluid full-scroll">
  <div class="page__heading cancel-row">
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb mb-0">
        <li class="breadcrumb-item"><i class="material-icons icon-20pt">home</i></li>
        <li class="breadcrumb-item active" aria-current="page">Task</a></li>
      </ol>
    </nav>
    <div class="row">
      <div style="display:inline-block" class=" col-lg-4  w-50 p-12 px-md-1 ">
        <h1 class="ml-3">View Task</h1>
      </div>
    </div>
    <div class="actions col-lg-12">
      <div class="row">
        <div class="col-lg-9 left-move"></div>
        <div class="left-move">
          <%=link_to 'Add New Task',new_task_path,id:"new_task", class:"btn btn-primary m-1 float-right" %>
        </div>
        <div class="right-move">
            <%=link_to 'Refresh',close_task_path,id:"new_task", class:"btn btn-primary m-1 float-right" %>
        </div>
      </div>
    </div>
  </div>
  <div class="task" style="font-size: large !important;">Active Tasks</div>
  <table class="table mb-0 thead-border-top-0 mt-1  table-hover">
    <thead class="table-info task">
      <tr>
        <th colspan="3">Task Name</th>
        <th colspan="5">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @active_tasks.each do |task| %>
        <tr class="redirect_to_show cursor-pointer" data-url=<%= task_path(task) %>>
          <td colspan="3"><%= task.task_name %></td>
          <td colspan="2">
            <a href=<%=edit_task_path(task)%> ><i class="material-icons">edit</i></a>
            <a data-confirm="Are you sure?" rel="nofollow" data-method="delete" href=<%=task_path(task)%>><i class="material-icons">delete</i></a>
          <% if task.flag%>
            <td colspan="3"><%=link_to 'View Task',general_path(task.id),id:"begin-task",class:"btn btn-primary"%></td>
          <% else %>
            <td colspan="3"><%=link_to 'Begin Task',general_path(task.id),id:"begin-task",class:"btn btn-primary"%></td>
          <%end%>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class="row"></div>
  <div class="row"></div>
  <div class="task" style="font-size: large !important;">
    InActive Tasks</h5>
  </div>
  <table class="table mb-0 thead-border-top-0 mt-1  table-hover">
    <thead class="table-info task">
      <tr>
        <th colspan="3">Task Name</th>
        <th colspan="5">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @inactive_tasks.each do |task| %>
        <tr class="redirect_to_show cursor-pointer" data-url=<%= task_path(task) %>>
          <td colspan="3"><%= task.task_name %></td>
          <td colspan="2">
          <a href=<%=edit_task_path(task)%> ><i class="material-icons">edit</i></a>
          <a data-confirm="Are you sure?" rel="nofollow" data-method="delete" href=<%=task_path(task)%>><i class="material-icons">delete</i></a>
          <% if task.flag%>
            <td colspan="3"><%=link_to 'View Task',general_path(task.id),id:"begin-task",class:"btn btn-primary"%></td>
          <% else %>
            <td colspan="3"><%=link_to 'Begin Task',general_path(task.id),id:"begin-task",class:"btn btn-primary"%></td>
          <%end%>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
