<p id="notice"><%= notice %></p>

<h1>Principals</h1>
<table class="table">
  <thead class="thead-dark">
    <tr>
      <th>Name</th>
      <th>Title</th>
      <th>Officer</th>
      <th>Ownership</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @principals.each do |principal| %>
      <tr>
        <td><%= principal.name %></td>
        <td><%= principal.title %></td>
        <td><%= principal.officer %></td>
        <td><%= principal.ownership %></td>
        <td><%= link_to 'Show', principal %></td>
        <td><%= link_to 'Edit', edit_principal_path(principal) %></td>
        <td><%= link_to 'Destroy', principal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

