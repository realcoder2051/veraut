<div class="row">
  <div class="col-lg-4 left-move"></div>
  <div class="col-lg-4 left-move">
    <label for="family_name">Name <span class="required"></span></label>
    <%=f.text_field :name,hide_label: true%>
    <div class="invalid-feedback">Please provide a time.</div>
    <div class="valid-feedback">Looks good!</div>
  </div>
</div>
<div class="row" >
  <div class="col-lg-4 left-move"></div>
  <div class="col-lg-4 left-move">
    <label for="family_relationship">Relationship <span class="required"></span></label>
    <%= f.select :relationship,options_for_select([ "Adopted Child", "Child","GrandChild","GrandParent","Parent","Sibling","Spouse" ], @family[:relationship]), { :include_blank => '-- Select One --',hide_label: true }  %>
    <div class="invalid-feedback">Please provide a time.</div>
    <div class="valid-feedback">Looks good!</div>
  </div>
</div>
<div class="row" >
  <div class="col-lg-4 left-move"></div>
  <div class="col-lg-4 left-move">
    <label for="family_related_to">Related to <span class="required"></span></label>
    <%= f.select :related_to,options_for_select(@principals.collect{ |u| [u.name,u.id] },@family[:related_to]),{ :include_blank => '-- Select One --',hide_label: true }   %>
    <div class="invalid-feedback">Please provide a time.</div>
    <div class="valid-feedback">Looks good!</div>
  </div>
</div>
<div class="actions col-lg-12">
  <div class="row">
    <div class="col-lg-5 left-move"></div>
    <div class="left-move">
      <%= f.submit value: "Save", class: "btn btn-primary"%>
    </div>
    <div class="ml-2">
      <%= link_to 'Cancel', families_path, class: "btn btn-secondary " %>
    </div>
  </div>
</div>
