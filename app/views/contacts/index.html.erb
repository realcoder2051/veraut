<p id="notice"><%= notice %></p>

<h1>Contacts</h1>

<table class="table">
  <thead class="thead-dark">
    <tr>
      <th>Name</th>
      <th>Company name</th>
      <th>Email</th>
      <th>Roles</th>
      <th>Rights</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact.name %></td>
        <td><%= contact.company_name %></td>
        <td><%= contact.email %></td>
        <td><%= contact.roles %></td>
        <td><%= contact.rights %></td>
        <td>
        <td><%= link_to 'Edit', edit_contact_path(contact) %></td>
        <td><%= link_to 'Destroy', contact, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

