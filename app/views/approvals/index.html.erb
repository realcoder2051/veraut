 
<div class="employee_index_scroll">
	<div class="container-fluid page__heading-container">
		<div class="page__heading d-flex align-items-center">
			<div class="flex">
				<div class="row">
					<div class="col-lg-2">
						<nav aria-label="breadcrumb">
							<ol class="breadcrumb mb-0">
								<li class="breadcrumb-item"><a href=<%='#'%>><i class="material-icons icon-20pt">home</i></a></li>
								<li class="breadcrumb-item active" aria-current="page"><a href=<%='#'%>>Approval</a></li>
							</ol>
							<h1 class="m-0">Approval</h1>
						</nav>
					</div>

					<div class="container">
						<div class="row bs-wizard" style="border-bottom:0;">
								<div class=  "col-md-1 bs-wizard-step <%= @address.present? && @contact_number.present? ? 'complete' : 'disabled' %>"  >
								<div class="text-center bs-wizard-stepnum">General</div>
								<div class="progress">
									<div class="progress-bar"></div>
								</div>
								<a href="#" class="bs-wizard-dot"></a>
							</div>
								<div class=  "col-md-1 bs-wizard-step <%= @company.present? ? 'complete' : 'disabled' %>"  >
								<!-- complete -->
								<div class="text-center bs-wizard-stepnum">Company</div>
								<div class="progress">
									<div class="progress-bar"></div>
								</div>
								<a href="#" class="bs-wizard-dot"></a>
							</div>
								<div class=  "col-md-1 bs-wizard-step <%= @principal.present? ? 'complete' : 'disabled' %>"  >
								<!-- complete -->
								<div class="text-center bs-wizard-stepnum">Principals</div>
								<div class="progress">
									<div class="progress-bar"></div>
								</div>
								<a href="#" class="bs-wizard-dot"></a>
							</div>

								<div class=  "col-md-1 bs-wizard-step <%=  @family.present? ? 'complete' : 'disabled' %>"  >
								<!-- complete -->
								<div class="text-center bs-wizard-stepnum">Family</div>
								<div class="progress">
									<div class="progress-bar"></div>
								</div>
								<a href="#" class="bs-wizard-dot"></a>
							</div>
								<div class=  "col-md-1 bs-wizard-step <%= @business.present? ? 'complete' : 'disabled' %>"  >
								<!-- complete -->
								<div class="text-center bs-wizard-stepnum">Business</div>
								<div class="progress">
									<div class="progress-bar"></div>
								</div>
								<a href="#" class="bs-wizard-dot"></a>
							</div>

								<div class=  "col-md-1 bs-wizard-step <%= @contact.present? ? 'complete' : 'disabled' %>"  >
								<!-- complete -->
								<div class="text-center bs-wizard-stepnum">Contacts</div>
								<div class="progress">
									<div class="progress-bar"></div>
								</div>
								<a href="#" class="bs-wizard-dot"></a>
							</div>

								<div class=  "col-md-1 bs-wizard-step <%= @plan.present? ? 'complete' : 'disabled' %>"  >
								<!-- complete -->
								<div class="text-center bs-wizard-stepnum">Plans</div>
								<div class="progress">
									<div class="progress-bar"></div>
								</div>
								<a href="#" class="bs-wizard-dot"></a>
							</div>
								<div class=  "col-md-1 bs-wizard-step <%= @fifty_five_hundred.present? ? 'complete' : 'disabled' %>"  >
								<div class="text-center bs-wizard-stepnum">5500</div>
								<div class="progress">
									<div class="progress-bar"></div>
								</div>
								<a href="#" class="bs-wizard-dot"></a>
							</div>
								<div class=  "col-md-1 bs-wizard-step <%= @employee.present? ? 'complete' : 'disabled' %>"  >
								<!-- complete -->
								<div class="text-center bs-wizard-stepnum">Employee</div>
								<div class="progress">
									<div class="progress-bar"></div>
								</div>
								<a href="#" class="bs-wizard-dot"></a>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>

	<div class="container-fluid page__container">
		<div>
			<div class="mr-3 float-right btn-size">
				<th><button type="button" class="btn btn-success  px-6 " data-toggle="modal" data-target="#new_approval ">Sign
						and
						Submit</button></th>
			</div>
			<h3> PLEASE READ CAREFULLY BEFORE SUBMITTING YOUR CENSUS COLLECTION </h3>
		</div>
		<div class="mt-4 mb-2">
			<span> Please review the information you are about to submit. This information will be used inprocessing your
				retirement plan's compliance reports and in satisfying the reporting and this closure requirements of the
				department of labour. If you have any questions or need additional assistance, please contact your
				administrative
				team by clicking on the contact button at the top right hand corner of your screen. </span>
		</div>

		<div class="card card-form">
			<div class="row no-gutters">
				<div class="col-lg-12 card-form__body">
					<%= render '/documents/document.table', documents: @documents  %>
				</div>
			</div>
		</div>
		<div class="card card-form">
			<div class="row no-gutters">
				<div class="col-lg-12 card-form__body">
					<%= render '/notes/approval_note_table', note: @notes%>
				</div>
			</div>
		</div>
	</div>
</div>

<div class="modal fade" id="new_approval" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
	aria-hidden="true">
	<div class="modal-dialog" style="width:35%" position="" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<div class="page__heading"></div>
				<h5 class="modal-title" id="exampleModalLabel">Sign and submit Collection </h5>
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
			<div class="modal-body">
				<%= bootstrap_form_tag(url:'approval')do |f| %>
				<%=render 'form', f: f %>
				<% end %>
			</div>
		</div>
	</div>
</div>