
<%= bootstrap_form_tag(url:'company')do |f| %>
<div class="form-row">
	<div class="col-lg-1"></div>
	<div class="col-lg-10">
		<%= f.text_area :description , {:size=> "50x5"}%>
		<div class="invalid-feedback">Please provide a time.</div>
		<div class="valid-feedback">Looks good!</div>
	</div>
</div>
<div class="form-row d-none ">
	<div class="col-lg-3 left-move"></div>
	<div class="col-lg-4 left-move">
		<%= f.text_field :data_collection_step , :id => 'data_collection_step' ,  value: data_collection %>
		<div class="invalid-feedback">Please provide a time.</div>
		<div class="valid-feedback">Looks good!</div>
	</div>
</div>
<div class="form-row d-none">
	<div class="col-lg-3 left-move"></div>
	<div class="col-lg-4 left-move">
		<%= f.text_field :id  %>
		<div class="invalid-feedback">Please provide a time.</div>
		<div class="valid-feedback">Looks good!</div>
	</div>
</div>
<div class="actions col-lg-12">
	<div class="row">
		<div class="col-lg-1 my-2"></div>
		<div class=" my-2 ">
			<button class="btn btn-primary" , id="update_note_button" > update </button>
		</div>
		<div class="col-lg-1"></div>
		<div class="my-2">
			<button class="btn btn-danger"  data-dismiss="modal"> cancel </button>
		</div>
	</div>
</div>
<% end %>
