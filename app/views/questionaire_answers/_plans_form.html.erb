<%plans.each_with_index do |plan, index|%>
  <div class="row" >
    <div class="col-lg-9" >
      <%=f.label 'question' + (index+1).to_s, plan,class: "text-transform: none" %>
    </div>
    <div class="col-lg-3">
      <%if index<=8%>
      <input type=hidden name='questionaire_answer[id][]' value= <%=get_id(index)%> />
      <%=select_tag 'questionaire_answer[answer][]',options_for_select(["Yes","No"],get_value(index)), prompt: 'Select One' , :required => true%>
      <br>
      <%elsif index>=9 && index<=10 %>
        <input type=hidden name='questionaire_answer[id][]' value= <%=get_id(index)%> />
        <%=select_tag 'questionaire_answer[answer][]',options_for_select(["Yes","No","Decison Not yet made"],get_value(index)) , prompt: 'Select One', :required => true%>
        <br>
      <%else%>
        <input type=hidden name='questionaire_answer[id][]' value= <%=get_id(index)%> />
				<%=date_field_tag 'questionaire_answer[answer][]',get_value(index), :required => true , as: :date_picker, class: "date-class"%>
      <%end%>
      <div class="invalid-feedback">Please provide a time.</div>
      <div class="valid-feedback">Looks good!</div>
    </div>
  </div>
<%end%>
<div class="actions col-lg-12">
  <div class="row">
    <div class="col-lg-5 left-move"></div>
    <div class="left-move">
      <%= f.submit value: "Save",data: { disable_with: "Plan" }, class: "btn btn-primary"%>
    </div>
    <div class="col-lg-1 right-move"></div>
    <div class="right-move">
      <%= link_to 'Cancel', root_path, class: "btn btn-secondary " %>
    </div>
  </div>
</div>
<div class="row"></div>
<div class="row"></div>
