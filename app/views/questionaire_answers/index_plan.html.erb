<div class="container-fluid full-scroll">
	<div class="page__heading cancel-row">
		<nav aria-label="breadcrumb">
			<ol class="breadcrumb mb-0">
				<li class="breadcrumb-item"><i class="material-icons icon-20pt">home</i></li>
				<li class="breadcrumb-item active" aria-current="page">Plan</a></li>
			</ol>
		</nav>
		<div class="row">
			<div style="display:inline-block" class=" col-lg-4  w-50 p-12 px-md-1 ">
				<h1 class="ml-3">View plans</h1>
			</div>
		</div>
	</div>
	<div class="card card-form">
		<div class="row no-gutters">
			<div class="col-lg-12 card-form__body">
				<div class="ml-3  float-right">
					<%if !is_plan_exist?%>
					<div class="ml-3  float-right">
						<%=link_to 'Add New Plan',plans_new_path, class:"btn btn-primary m-1 float-right" %>
					</div>
					<%end%> </div>
				<div class="ml-2 my-1 float-right">
					<button type="button" class="btn btn-success  px-3" data-toggle="modal" data-target="#myModal">Notes
					</button>
				</div>
			</div>
			<div class="col-lg-12 card-form__body">
				<table class="table mb-0 thead-border-top-0 mt-1  table-hover">
					<thead class="table-info">
						<tr>
							<th scope="col">1</th>
							<th scope="col">2</th>
							<th scope="col">3</th>
							<th scope="col">4</th>
							<th scope="col">5</th>
							<th scope="col">6</th>
							<th scope="col">7</th>
							<th scope="col">8</th>
							<th scope="col">9</th>
							<th scope="col">10</th>
							<th scope="col">11</th>
							<th scope="col">12</th>
							<th scope="col">Actions</th>
						</tr>
					</thead>
					<%if is_plan_exist?%>
					<tbody>
						<tr>
							<%@questionaire_answers.each do |plan|%>
							<td><%=plan.answer%></td>
							<%end%>
							<%#QuestionaireAnswer.joins(task: :task_group).where('task_groups.user_id=?', current_user.id) %>
							<td><a
									href=<%=edit_plan_path(@questionaire_answers.joins(task: :task_group).where('task_groups.user_id=? AND question_type_id = ?',current_user.id,1).first.id)%>><i
										class="material-icons icon-20pt modal-edit">edit</i></a></td>
						</tr>
					</tbody>
					<%end%>
				</table>
			</div>
		</div>
	</div>
</div>
<%= render '/shared/notes_popup', { data_collection_step: "plan"} %>

