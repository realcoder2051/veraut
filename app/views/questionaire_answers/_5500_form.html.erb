<%questions.each_with_index do |fifty_five, index|%>
  <div class="row" >
    <div class="col-lg-9" >
      <%=f.label 'question'+(index+1).to_s,fifty_five,class: "text-transform: none" %>
    </div>
    <div class="col-lg-3">
      <input type=hidden name='questionaire_answer[id][]' value= <%=get_id(index)%> />
			<%if index==3%>
				<%=number_field_tag 'questionaire_answer[answer][]',get_value(index) ,class: :"date-class"%>
			<%else%>
				<%=select_tag 'questionaire_answer[answer][]',options_for_select(["Yes","No"],get_value(index) )%>
			<%end%>
				<br>
      <div class="invalid-feedback">Please provide a time.</div>
      <div class="valid-feedback">Looks good!</div>
    </div>
  </div>
<%end%>

<div class="actions col-lg-12">
  <div class="row">
    <div class="col-lg-4 left-move"></div>
    <div class="left-move">
      <%= f.submit value: "Save",data: { disable_with: "5500" }, class: "btn btn-primary" %>
    </div>
    <div class="col-lg-1 right-move"></div>
    <div class="right-move">
      <%= link_to 'Cancel', root_path, class: "btn btn-secondary " %>
    </div>
  </div>
</div>
