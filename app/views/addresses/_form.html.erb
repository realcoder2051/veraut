<div class="row">
	<div class="col-lg-4 left-move"></div>
	<div class="col-lg-4 left-move">
		<label for="address_address1">Address1 <span class="required"></span></label>
		<%=f.text_field :address1 , { :id => 'first_address',hide_label: true }  %>
		<div class="invalid-feedback">Please provide a time.</div>
		<div class="valid-feedback">Looks good!</div>
	</div>
</div>
<div class="row">
	<div class="col-lg-4 left-move"></div>
	<div class="col-lg-4 left-move">
		<%=f.text_field :address2,  { :id => 'second_address', :label=> 'Address 2' } %>
		<div class="invalid-feedback">Please provide a time.</div>
		<div class="valid-feedback">Looks good!</div>
	</div>
</div>
<div class="row">
	<div class="col-lg-4 left-move"></div>
	<div class="col-lg-4 left-move">
	  <label for="address_city">City <span class="required"></span></label>
		<%=f.text_field :city,hide_label: true%>
		<div class="invalid-feedback">Please provide a time.</div>
		<div class="valid-feedback">Looks good!</div>
	</div>
</div>

<div class="row">
	<div class="col-lg-4 left-move"></div>
	<div class="col-lg-4 left-move">
	  <label for="address_state">State <span class="required"></span></label>
		<%=f.select :state,options_for_select(['Alabama','Alaska','American Samoa','Arizona','Arkansas','California','Colorado','Connecticut','Delaware','District of Columbia','Federated States of Micronesia','Florida','Georgia','Guam','Hawaii','Idaho','Illinois','Indiana','Iowa','Kansas','Kentucky','Louisiana','Maine','Marshall Islands','Maryland','Massachusetts','Michigan','Minnesota','Mississippi','Missouri','Montana','Nebraska','Nevada','New Hampshire','New Jersey','New Mexico','New York','North Carolina','North Dakota','Northern Mariana Islands','Ohio','Oklahoma','Oregon','Palau','Pennsylvania','Puerto Rico','Rhode Island','South Carolina','South Dakota','Tennessee','Texas','Utah','Vermont','Virgin Island','Virginia','Washington','West Virginia','Wisconsin','Wyoming'], @address[:state]) , { :include_blank => '-- Select One --' ,hide_label: true}%>
		<div class="invalid-feedback">Please provide a time.</div>
		<div class="valid-feedback">Looks good!</div>
	</div>
</div>

<div class="row">
	<div class="col-lg-4 left-move"></div>
	<div class="col-lg-4 left-move">
		<label for="address_zip">ZIP <span class="required"></span></label>
		<%=f.text_field :zip,hide_label: true%>
		<div class="invalid-feedback">Please provide a time.</div>
		<div class="valid-feedback">Looks good!</div>
	</div>
</div>

<div class="row">
	<div class="col-lg-4 left-move"></div>
	<div class="col-lg-4 left-move">
	<%= f.label :Address_Type%>
		<%=select_tag "Address_Type" ,options_from_collection_for_select(@address_types,:id,:task_name,select_address_type), { :include_blank => '-- Select One --' } %>
		<div class="invalid-feedback">Please provide a time.</div>
		<div class="valid-feedback">Looks good!</div>
	</div>
</div>
<input type=hidden name='old_address_mapping' value= <%=params[:address_mapping]%> />
<input type=hidden name='edit_url' value= <%=full_url_for%> />

<div class="actions col-lg-12">
	<div class="row">
		<div class="col-lg-5"></div>
		<div class="mt-3">
			<%= f.submit value: "Submit", class: "btn btn-primary"%>
		</div>
		
		<div class="mt-3 ml-2">
			<%= link_to 'Cancel', generals_path, class: "btn btn-secondary " %>
		</div>
	</div>
</div>
<br>