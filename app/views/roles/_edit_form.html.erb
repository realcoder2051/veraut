<div class="row" >
  <div class="col-lg-4 left-move"></div>
  <div class="col-lg-4 left-move">
    <%= f.text_field :name %>
    <div class="invalid-feedback">Please provide a time.</div>
    <div class="valid-feedback">Looks good!</div>
  </div>
</div>
<div class="row" >
  <div class="col-lg-4 left-move"></div>
  <div class="col-lg-4 left-move">
    <%= f.select :right_type,options_for_select(@rights.collect{ |u| [u.right_type, u.id]}), {include_blank: false}, {multiple: true} %>
    <div class="invalid-feedback">Please provide a time.</div>
    <div class="valid-feedback">Looks good!</div>
  </div>
</div>
<% if is_role_and_right_exist? %>
  <div class="row" >
    <div class="col-lg-4 left-move"></div>
    <div class="col-lg-4 left-move">
      <%= f.hidden_field :role_right_id,value: @role.roles_rights.first.id %>
      <div class="invalid-feedback">Please provide a time.</div>
      <div class="valid-feedback">Looks good!</div>
    </div>
  </div>
<%end%>
<div class="actions col-lg-12">
  <div class="row">
    <div class="col-lg-5 left-move"></div>
    <div class="left-move">
      <%= f.submit value: "Save", class: "btn btn-primary"%>
    </div>
    <div class="col-lg-1 right-move"></div>
    <div class="right-move">
      <%= link_to 'Cancel', roles_path, class: "btn btn-secondary " %>
    </div>
  </div>
</div>
