<h1 >Roles</h1>
<table class="table">
  <thead class="thead-dark">
    <tr>
      <th>Role</th>
      <th colspan="1">Actions</th>
      <th><%=link_to 'Add New Role',new_role_path, class:"btn btn-primary" %></th>
    </tr>
  </thead>
  <tbody>
    <% @roles.each do |role| %>
      <tr>
        <td><%= role.role_name %></td>
        <td><i class="material-icons icon-20pt"><%= link_to 'slideshow',role %></i>
        <i class="material-icons icon-20pt"><%= link_to 'edit', edit_role_path(role) %></i>
        <i class="material-icons icon-20pt"><%= link_to 'delete', role, method: :delete, data: { confirm: 'Are you sure?' } %></i></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
