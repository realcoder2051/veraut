<div class="container-fluid full-scroll">
 <div class="page__heading cancel-row">
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb mb-0">
        <li class="breadcrumb-item"><i class="material-icons icon-20pt">home</i></li>
        <li class="breadcrumb-item active" aria-current="page">Business</a></li>
      </ol>
    </nav>
      <div class="row">
      <div style="display:inline-block" class=" col-lg-4  w-50 p-12 px-md-1 ">
      <h1 class="ml-3">View Business</h1> 
      </div>
      <div class="col-lg-2 offset-lg-6">
        <%=link_to 'New Business',new_business_path, class:"btn btn-primary m-1 float-right" %>
      </div>
    </div>
  </div>
  <table class="table mb-0 thead-border-top-0 mt-1  table-hover">
    <thead class="table-info">
      <tr>
        <th>Name</th>
        <th>Ein</th>
        <th>Date purchased</th>
        <th>Address</th>
        <th>Phone</th>
        <th>Employees?</th>
        <th>Plan Sponsor</th>
        <th>Entity type</th>
        <th colspan="1">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @businesses.each do |business| %>
        <tr class ="cursor-pointer" data-link="<%= business_path(business) %>">
          <td><%= business.name %></td>
          <td><%= business.ein %></td>
          <td><%= business.date_purchased_or_sold %></td>
          <td><%= business.address %></td>
          <td><%= business.phone %></td>
          <td><%= business.does_company_have_employees %></td>
          <td><%= business.qualified_plan_sponsored %></td>
          <td><%= business.entity_type %></td>
          <td>
          <i class="material-icons icon-20pt modal-edit"><%= link_to 'edit', edit_business_path(business) %></i>
          <i class="material-icons icon-20pt"><%= link_to 'delete', business, method: :delete, data: { confirm: 'Are you sure?' } %></i></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>
