<p id="notice"><%= notice %></p>

<h1>Businesses</h1>

<table class="table">
  <thead class="thead-dark">
    <tr>
      <th>Name</th>
      <th>Ein</th>
      <th>Date purchased or sold</th>
      <th>Address</th>
      <th>Phone</th>
      <th>Does company have employees</th>
      <th>Qualified plan sponsored</th>
      <th>Entity type</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @businesses.each do |business| %>
      <tr>
        <td><%= business.name %></td>
        <td><%= business.ein %></td>
        <td><%= business.date_purchased_or_sold %></td>
        <td><%= business.address %></td>
        <td><%= business.phone %></td>
        <td><%= business.does_company_have_employees %></td>
        <td><%= business.qualified_plan_sponsored %></td>
        <td><%= business.entity_type %></td>
        <td><%= link_to 'Edit', edit_business_path(business) %></td>
        <td><%= link_to 'Destroy', business, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

