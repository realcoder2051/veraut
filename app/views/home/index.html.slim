- content_for :jumbotron do
  .jumbotron
    .container
      h1.display-3
        | BEI

      p= link_to '#', class: 'btn btn-primary' do
        | Button &raquo;

.container
  table.table.table-striped.table-bordered.table-hover
    thead
      tr
        th colspan=2 Status

    tbody
      tr
        td Environment
        td
          code= @status.env
      tr
        td Server
        td
          code= @status.ip
      tr
        td Version
        td
          code= @status.version
      tr
        td Started
        td
          = @status.boot_time
