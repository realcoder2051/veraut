<div class="anyClass">
  <table class="table">
    <thead class="thead-dark">
      <tr>
        <th scope="col">Username</th>
        <th scope="col">Email</th>
        <th scope="col">Role Type</th>
        <th colspan="1">Actions</th>
        <th><%=link_to 'Add New User',new_user_path, class:"btn btn-primary" %></th>
      </tr>
    </thead>
    <% @users.each do |user| %>
      <tbody>
        <tr>
            <td><%=user.username%></td>
            <td><%=user.email%></td>
            <td><%=user.roles.pluck(:name).join(' ')%></td>
            <td><i class="material-icons icon-20pt"><%= link_to 'slideshow',user %></i>
            <i class="material-icons icon-20pt"><%= link_to 'edit', edit_user_path(user) %></i>
            <i class="material-icons icon-20pt"><%= link_to 'delete', user, method: :delete, data: { confirm: 'Are you sure?' } %></i></td>
        </tr>
      </tbody>
    <%end%>
  </table>
</div>
