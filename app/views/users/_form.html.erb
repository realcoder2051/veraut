<div class="row" >
  <div class="col-lg-4 left-move"></div>
  <div class="col-lg-4 left-move">
    <%= f.text_field :first_name %>
    <div class="invalid-feedback">Please provide a time.</div>
    <div class="valid-feedback">Looks good!</div>
  </div>
</div>
<div class="row" >
  <div class="col-lg-4 left-move"></div>
  <div class="col-lg-4 left-move">
    <%= f.text_field :last_name %>
    <div class="invalid-feedback">Please provide a time.</div>
    <div class="valid-feedback">Looks good!</div>
  </div>
</div>
<div class="row" >
  <div class="col-lg-4 left-move"></div>
  <div class="col-lg-4 left-move">
  <%= f.email_field :email, placeholder: 'Email' %>
    <div class="invalid-feedback">Please provide a email.</div>
    <div class="valid-feedback">Looks good!</div>
  </div>
</div>

<div class="row" >
  <div class="col-lg-4 left-move"></div>
  <div class="col-lg-4 left-move">
  <% if action_name == 'edit' %>
    <%= f.password_field :password, hint: 'To keep the current password leave the password fields blank.' %>
  <% else %>
    <%= f.password_field :password %>
  <% end %>
    <div class="invalid-feedback">Please provide a correct password.</div>
    <div class="valid-feedback">Looks good!</div>
  </div>
</div>
<div class="row" >
  <div class="col-lg-4 left-move"></div>
  <div class="col-lg-4 left-move">
  <%= f.password_field :password_confirmation %>
    <div class="invalid-feedback">Please provide a same password.</div>
    <div class="valid-feedback">Looks good!</div>
  </div>
</div>

<div class="actions col-lg-12">
  <div class="row">
    <div class="col-lg-5 left-move  my-2"></div>
    <div class="left-move my-2 ml-2">
      <%= f.submit value: "Save", class: "btn btn-primary"%>
    </div>
   
    <div class="right-move my-2 ml-2">
      <%= link_to 'Cancel', users_path, class: "btn btn-secondary " %>
    </div>
  </div>
</div>
